@page
@model GardenUser
@{
    Layout = null;
}
<link href="~/vendor/fontawesome-free/css/all.css" rel="stylesheet" />
<link href="~/css/sb-admin-2.css" rel="stylesheet" />
<link href="~/js/sweetalert2/sweetalert2.bundle.css" rel="stylesheet" />
<style>
    body {
        font-family: "IBMPlexSansKR-Regular"
    }

    .flex-container {
        width: 100%;
        height: 100vh;
        display: -webkit-box;
        display: -moz-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-align: center;
        -moz-box-align: center;
        -ms-flex-align: center;
        align-items: center; /* 수직 정렬 */

        -webkit-box-pack: center;
        -moz-box-pack: center;
        -ms-flex-pack: center;
        justify-content: center; /* 수평 정렬 */
    }
</style>
<div class="flex-container">
    <div class="card o-hidden border-0 shadow-lg" style="width: 1000px; display: none" id="membership_dv">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image" style="background-image: url('/img/flowers.jpg')"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Garden 계정 생성하기</h1>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <input type="text" id="register_name" name="Name" class="form-control form-control-user" placeholder="@Html.Raw("이름")">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-12">
                                <input type="text" id="register_nick_name" name="NickName" class="form-control form-control-user" placeholder="@Html.Raw("닉네임")">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-8">
                                <input type="text" id="register_email" data-check='false' name="Email" class="form-control form-control-user" placeholder="@Html.Raw("이메일")">
                                <div id="email_check_dv">

                                </div>
                            </div>
                            <div class="col-sm-4">
                                <button type="button" id="email_check_btn" class="btn btn-success btn-user btn-block" onclick="CheckEmail()">
                                    @Html.Raw("이메일 중복확인")
                                </button>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-12" id="password_col">
                                <input type="password" class="form-control form-control-user" name="Password" id="register_password" placeholder="@Html.Raw("비밀번호")" onkeyup="CheckPwValidation()">
                                <div id="password_validation_dv">

                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-12">
                                <input type="password" class="form-control form-control-user" id="register_password_check" placeholder="@Html.Raw("비밀번호 확인")" onkeyup="PwCompare()">
                                <div id="password_check_dv">

                                </div>
                            </div>
                        </div>
                        <hr>
                        <button type="button" onclick="CheckMembershipForm()" class="btn btn-primary btn-user btn-block" id="create_account_btn">
                            @Html.Raw("계정 생성하기")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/vendor/jquery/jquery.js"></script>
<script src="~/js/sweetalert2/sweetalert2.bundle.js"></script>
<script src="~/defaultSetting.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.js"></script>
<script src="~/vendor/jquery-easing/jquery.easing.js"></script>
<script src="~/js/sb-admin-2.js"></script>
<script src="~/js/common.js"></script>
<script src="~/defaultSetting.js"></script>
<script src="~/js/membership.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#membership_dv').fadeIn(1500);
    });
    
</script>